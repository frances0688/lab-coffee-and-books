<!DOCTYPE html>
<html>
  <head>
    <title>My First Map</title>
    <style>
       #map {
        height: 500px;
        width: 100%;
       }
    </style>
  </head>
  <body>
    <h3>My First Map</h3>


    <form method="POST" action="/save">

      <input type="text" name="name" placeholder="name">
      <input type="text" name="description" placeholder="description">
      <input type="text" name="latitude" placeholder="latitude" id="latitude">
      <input type="text" name="longitude" placeholder="longitude" id="longitude">
      <button type="submit" name="save">Save</button>
    </form>
    <div id="map"></div>



    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAqiGQyYZl5S4qJbuvucm6bu_ZPfB1Wd7E">
    </script>
    <script type="text/javascript" src="/javascripts/index.js"></script>
  </body>
</html>
